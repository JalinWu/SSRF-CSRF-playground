<div class="wrapper">
    <div class="sidebar" data-color="azure" data-background-color="black"
        data-image="http://localhost:5000/img/sidebar-2.jpg">
        <div class="logo text-center">Playground</div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li class="nav-item ">
                    <a class="nav-link" href="./ssrf">
                        <i class="material-icons">dashboard</i>
                        <p>SSRF</p>
                    </a>
                </li>
                <li class="nav-item ">
                    <a class="nav-link" href="./csrf">
                        <i class="material-icons">library_books</i>
                        <p>CSRF</p>
                    </a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="./line-info">
                        <i class="material-icons">account_circle</i>
                        <p>LINE Info</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="main-panel">
        <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top " id="navigation-example">
            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <a class="navbar-brand" href="javascript:void(0)">LINE Info Demo</a>
                </div>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)">
                                <i class="material-icons">person</i>
                                <%= user.name %>
                                    <p class="d-lg-none d-md-block">
                                        Account
                                    </p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- <a href="/users/logout" class="btn btn-secondary">Logout</a> -->
        <div class="content">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body">
                            <button type="submit" class="btn btn-success" onclick="getProfile()">取得Profile<i class="material-icons">refresh</i></button>
                            <br>
                            名稱：<p id="displayName"></p>
                            狀態：<p id="statusMessage"></p>
                            照片：<img id="pictureUrl" src="" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.3.min.js"
    integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
<script>
    function getProfile() {
        $.ajax({
            type: 'GET',
            url: '/line/profile',
            error: function (xhr) {
                console.log('Oops, something went wrong.');
            },
            success: function (res) {
                $("#displayName").text(res.displayName);
                $("#statusMessage").text(res.statusMessage);
                $("#pictureUrl").attr("src", res.pictureUrl);
            }
        });
    }
</script>