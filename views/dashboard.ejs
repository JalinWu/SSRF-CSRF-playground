    </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.3.min.js"
    integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
<script>
    function start() {
        console.log("Hey");
        $.ajax({
            type: 'GET',
            url: '/points/get',
            error: function (xhr) {
                console.log('Oops, something went wrong.');
            },
            success: function (res) {
                console.log(res);
                $("#myPoints").text(res);

            }
        });
    }
    start();
</script>